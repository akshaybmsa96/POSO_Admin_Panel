<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recbound"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:elevation="3dp"
    android:paddingBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/deliverychargetextviewid"
        android:layout_alignStart="@+id/deliverychargetextviewid"
        android:id="@+id/taxamounttextviewid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="8dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Total : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
                android:layout_width="100dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:id="@+id/amounttextview"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/taxamounttextviewid"
        android:layout_alignStart="@+id/taxamounttextviewid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Sub Total : "
        android:textSize="18dp"
        android:id="@+id/textview1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ghj"
        android:textSize="18dp"
        android:layout_width="180dp"
        android:gravity="center"
        android:layout_alignRight="@+id/textview1"
        android:layout_height="wrap_content"
        android:id="@+id/subtotaltextviewid"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Delivery Charges : "
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textview1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Taxes : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/deliverychargetextviewid"
        android:layout_below="@+id/subtotaltextviewid"
        android:layout_alignLeft="@+id/subtotaltextviewid"
        android:layout_alignStart="@+id/subtotaltextviewid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>